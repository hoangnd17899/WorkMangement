@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Đăng nhập</h1>
<span class="text-success">@ViewData["RegisterSuccess"]</span>
<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="@Model.returnUrl" hidden/>
    <div>
        <label asp-for="@Model.UserName" style="width:150px" class="control-label"></label>
        <input type="text" asp-for="@Model.UserName" />
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Password" style="width:150px" class="control-label"></label>
        <input type="password" asp-for="@Model.Password" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.RememberMe" style="width:150px" class="control-label"></label>
        <input type="checkbox" asp-for="@Model.RememberMe" />
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <button type="submit">Đăng nhập</button>
    <a asp-action="Register" asp-controller="Account">Đăng ký tài khoản</a>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}